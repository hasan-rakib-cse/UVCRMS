@{
    ViewData["Title"] = "Unallocat all ClassRooms";
}

<div class="container">
    <div class="row st_login_form">
        <div class="col-md-offset-3 col-md-6">
            <div class="addDepartment">
                <h3>Unallocate all Classrooms</h3>
                @using (Html.BeginForm(null, null, FormMethod.Post, new { onsubmit = "return ConfirmUnassign()" }))
                {
                    <p align="center">
                        <input type="submit" id="unallocatedClassRoom" name="unallocatedClassRoom" value="Unallocate ClassRooms">
                    </p>
                }
            </div>
        </div>
    </div>
</div>
@{
    if (@ViewData["Message"] != "")
    {
        <script language="javascript">
            alert('@ViewData["Message"]');
        </script>
    }
}
<script type="text/javascript">
    function ConfirmUnassign() {
        var ans = confirm("Are You Sure to Unallocated all Class Rooms?");
        if (ans === true) {
            return true;
        } else {
            return false;
        }
    }
</script>

