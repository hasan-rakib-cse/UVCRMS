@model UVCRMS.Models.Department

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @if (TempData["update_success_msg"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["update_success_msg"]
            </div>
        }

        <h4>Department</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="DepartmentCode" class="form-label">Code</label>
            <input asp-for="DepartmentCode" class="form-control" />
            <span asp-validation-for="DepartmentCode" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DepartmentName" class="form-label">Name</label>
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script src="~/bundles/jqueryval"></script>
}

