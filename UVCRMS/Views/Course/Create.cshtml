@model UVCRMS.Models.Course

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Course</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        <h4>Save Course</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="CourseCode" class="control-label col-md-2">Code</label>
            <div class="col-md-10">
                <input asp-for="CourseCode" class="form-control" />
                <span asp-validation-for="CourseCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CourseName" class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CourseCredit" class="control-label col-md-2">Credit</label>
            <div class="col-md-10">
                <input asp-for="CourseCredit" class="form-control" />
                <span asp-validation-for="CourseCredit" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CourseDescription" class="control-label col-md-2">Description</label>
            <div class="col-md-10">
                <textarea asp-for="CourseDescription" class="form-control"></textarea>
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DepartmentId" class="control-label col-md-2">Department</label>
            <div class="col-md-10">
                <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-control">
                    <option value="">--Select--</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SemesterId" class="control-label col-md-2">Semester</label>
            <div class="col-md-10">
                <select asp-for="SemesterId" asp-items="ViewBag.Semesters" class="form-control">
                    <option value="">--Select--</option>
                </select>
                <span asp-validation-for="SemesterId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script src="~/bundles/jqueryval"></script>
}
