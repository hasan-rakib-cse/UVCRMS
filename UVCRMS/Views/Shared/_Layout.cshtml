<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UVCRMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UVCRMS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-inline-block pe-5" asp-area="" asp-controller="Home" asp-action="Index">UVCRMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="department_dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Department
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="department_dropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Department" asp-action="Create">Save Department</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Department" asp-action="Index">View Department</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="course_dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Course
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="course_dropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Course" asp-action="Create">Save Courses</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Course" asp-action="Index">View Courses</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="teacher_dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Teacher
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="teacher_dropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Teacher" asp-action="Create">Save Teacher</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Teacher" asp-action="Index">View All Teacher</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CourseAssignToTeacher" asp-action="CourseAssignToTeacher">Course Assign to Teacher</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CourseAssignToTeacher" asp-action="CreateCourseStaticsByDeptId">View Course Statics By Dept Id</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CourseAssignToTeacher" asp-action="UnassignCourse">Course UnAssign</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="student_dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Student
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="student_dropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Student" asp-action="CreateStudentRegistration">Register Student</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Student" asp-action="Index">View All Student</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="EnrollCourse" asp-action="CreateEnrollCourse">Enrolling Course</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="SaveStudentResult" asp-action="CreateEnrollCourse">Save Result</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="SaveStudentResult" asp-action="ViewResult">View Student Result</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="classroom_dropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Class Room
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="classroom_dropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="AllocateClassRoom" asp-action="Create">Allocate Classroom</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AllocateClassRoom" asp-action="ViewClassScheduleAndRoomAllocation">View Class Routine</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="AllocateClassRoom" asp-action="UnallocatedClassRooms">Unassign all Classrooms</a></li>
                            </ul>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - University Course & Result Management System
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
