@model UVCRMS.Models.Teacher

@{
    ViewBag.Title = "Create Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Save Teacher</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="mb-3">
            <label asp-for="TeacherName" class="form-label">Name</label>
            <input asp-for="TeacherName" class="form-control" />
            <span asp-validation-for="TeacherName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TeacherAddress" class="form-label">Address</label>
            <input asp-for="TeacherAddress" class="form-control" />
            <span asp-validation-for="TeacherAddress" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TeacherEmail" class="form-label">Email</label>
            <input asp-for="TeacherEmail" class="form-control" />
            <span asp-validation-for="TeacherEmail" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TeacherContactNo" class="form-label">Contact No</label>
            <input asp-for="TeacherContactNo" class="form-control" />
            <span asp-validation-for="TeacherContactNo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DesignationId" class="form-label">Designation</label>
            <select asp-for="DesignationId" class="form-control" asp-items="ViewBag.Designations">
                <option value="">--Select--</option>
            </select>
            <span asp-validation-for="DesignationId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DepartmentId" class="form-label">Department</label>
            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                <option value="">--Select--</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CreditToBeTaken" class="form-label">Credit To Be Taken</label>
            <input asp-for="CreditToBeTaken" class="form-control" />
            <span asp-validation-for="CreditToBeTaken" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
